    <h1 class="text-center" style="font-size: 5rem;" >Aden's Math Practice</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form action="/" method="POST">  
                    <div class="mb-4">
                        <input style="font-size: 3rem;font-weight: 800;" type="text" class="form-control" name="num1" type="text" value=<%=number1%>> 
                        <span style="font-size: 2rem;font-weight: 800;border: none;">
                         <%=sign%>
                        </span>
                    </div>

                    <div class="mb-4">
                        <input style="font-size: 3rem;font-weight: 800;" type="text" class="form-control" name="num2" type="text" value=<%=number2%>>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Answer</label>
                        <textarea class="form-control" name="answer" rows="3"></textarea>
                    </div>
                <input type="submit" value="submit">
                </form>
            </div>
            <div class="row col-md-6">
                <%for(x in result){%>
                    <div class="card w-50">
                        <div class="card-body">
                          <h5 class="card-title"><p><%=result[x]%></p></h5>
                          <p class="card-text"></p>
                        </div>
                      </div>
                <%}%>
            </div>
    </div>
 
</div>

        <script src="" async defer></script>
    </body>
